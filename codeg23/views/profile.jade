extends layout

block content
	.profile-detail
		h1 Profile Page
		h2 Fullname #{target_user.fullname}
		h4 Email: #{target_user.email}
		h4 Address: #{target_user.address}
		h4 Customer Rate: #{target_user.customer_rate}
		h4 Owner Rate: #{target_user.owner_rate}
		h4 Bio:
		p #{user.bio}
	if(!(target_user._id>user._id || target_user._id<user._id))
		.owner-console
			.my-posts
				a(href="/profile/posts") Posts
			.my-order-sold
				a(href="/profile/sold") Sold
		.customer-console
			.my-requests
				a(href="/profile/requests") Requests
			.my-order-bought
				a(href="/profile/bought") Bought

