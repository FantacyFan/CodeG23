<html lang="en">
<head>
  <% include  ../views/head %>
</head>
<body>
    <% include ../views/nav %>
    <div class="ui stackable grid">
      <div class="ui grid">
        <div class="row" id="add-menu">
          <h1>List Your Menu Here</h1>
        </div>
      </div>
      <div class="row">
        <div class="ui grid">
        
          <div class="two wide column"></div>
          <div class="twelve wide column">
            <div class="ui form" action="/menu/add" method="post" id="add-menu-form-1">
              <div class="three fields">
                <div class="two wide field" style="text-align:center;">
                  <h3 style="padding:15px 40px;">Meal</h3>
                </div>
                <div class="one wide field"></div>
                <div class="thirteen wide field">
                  <div class="ui black basic button" style="border-radius:0px; padding:20px 40px; margin-right:1px;" name="breakfast">Breakfast&Brunch</div>
              

                  <div class="ui black basic button" style="border-radius:0px; padding:20px 40px; margin-right:1px;" name="lunch">Lunch</div>
               
               
                  <div class="ui black basic button" style="border-radius:0px; padding:20px 40px; margin-right:1px;" name="dinner">Dinner</div>
                
                
                  <div class="ui black basic button" style="border-radius:0px; padding:20px 40px; margin-right:1px;" name="party">Party</div>
                </div>
              </div>

              <div class="four fields">
                <div class="two wide field" style="text-align:center;">
                  <h3 style="padding:15px 40px;">Category</h3>
                </div>
                <div class="one wide field"></div>
                <div class="five wide field">
                  <div class="ui fluid search selection dropdown" style="border-radius:0px; width:100%; box-shadow:0 0 0 1px rgba(39,41,43,.15)inset!important; height:54px;" >
                    <input type="hidden" name="type">
                    <i class="dropdown icon"></i>
                    <div class="default text">Category</div>
                    <div class="menu">
                      <div class="item" data-value="American">American</div>
                      <div class="item" data-value="Chinese">Chinese</div>
                      <div class="item" data-value="Indian">Indian</div>
                      <div class="item" data-value="Thai">Thai</div>
                      <div class="item" data-value="Korean">Korean</div>
                      <div class="item" data-value="Japanese">Japanese</div>
                      <div class="item" data-value="Mexican">Mexican</div>
                    </div>
                  </div>
                </div>
                <div class="eight wide field"></div>
              </div>

              <div class="four fields">
                <div class="two wide field" style="text-align:center;">
                  <h3 style="padding:15px 40px;">Invitation</h3>
                </div>
                <div class="one wide field"></div>
                <div class="five wide field">
                  <div class="ui selection dropdown" style="border-radius:0px; width:100%; height:54px;">
                    <input type="hidden" name="quantity">
                    <div class="default text" style="margin-right:0px;">Guest</div>
                    <i class="dropdown icon"></i>
                    <div class="menu">
                      <div class="item" data-value="1guest">1 Guest</div>
                      <div class="item" data-value="2guests">2 Guests</div>
                      <div class="item" data-value="3guests">3 Guests</div>
                      <div class="item" data-value="4guests">4 Guests</div>
                      <div class="item" data-value="5guests">5 Guests</div>
                      <div class="item" data-value="6guests">6 Guests</div>
                      <div class="item" data-value="6plusguests">6+ Guests</div>
                    </div>
                  </div>
                </div>
                <div class="eight wide field"></div>
              </div>

              <div class="four fields">
                <div class="two wide field" style="text-align:center;">
                  <h3 style="padding:15px 40px;">University</h3>
                </div>
                <div class="one wide field"></div>
                <div class="five wide field">
                  <div class="ui fluid search selection dropdown" style="border-radius:0px; width:100%; box-shadow:0 0 0 1px rgba(39,41,43,.15)inset!important; height:54px;">
                    <input type="hidden" name="university">
                    <i class="dropdown icon"></i>
                    <div class="default text">University</div>
                    <div class="menu">
                      <div class="item" data-value="cornell">Cornell University</div>
                      <div class="item" data-value="syracuse">Syracuse University</div>
                      <div class="item" data-value="nyu">New York University</div>
                      <div class="item" data-value="pennstate">Penn State University</div>
                    </div>
                  </div>
                </div>
                <div class="eight wide field"></div>
              </div>


              <div class="two fields">
                <div class="eleven wide field"></div>
                <div class="five wide field" style="text-align:center;">
                  <div class="ui teal button" style="border-radius:2px; padding:15px 40px;">Continue</div>
                </div>
              </div>

            </div>
            <!-- end of form -->
          </div>
          <div class="two wide column"></div>

        </div>
      </div>

    </div>

  <script>
    $(document).ready(function() {
      $('.ui.dropdown').dropdown();
    }); 
  </script>
</body>


